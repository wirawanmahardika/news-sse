doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title ABNews
        link(rel='preconnect' href='https://fonts.googleapis.com')
        link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
        link(href='https://fonts.googleapis.com/css2?family=Montserrat&family=Poppins&display=swap' rel='stylesheet')
        link(rel="stylesheet", href="/css/style.css", attr)
    body(class="font-poppins min-h-[160vh]") 
        header(class="sm:flex sm:bg-cyan-600 sm:justify-between sm:items-center sm:sticky sm:top-0 lg:grid lg:grid-cols-3")
            div(class="hidden absolute top-full bg-slate-600 overflow-x-auto lg:flex left-0 right-0 text-sm py-1 px-1 text-gray-200")
                span(class="border-r-2 border-white pr-3 font-semibold px-5") Kategori
                ul(class="navbar-kategori flex gap-x-7 ml-7" )
                    //- li
                    //-     a(href="/" class="hover:text-sky-600") Business
                    //- li
                    //-     a(href="/" class="hover:text-sky-600") Alam
    


            div(class="p-3 sm:p-5 bg-cyan-600") 
                h1(class="font-bold text-3xl text-center text-white sm:text-3xl md:text-4xl") AB
                    span(class="text-yellow-500") News

            div(class="grid p-5 bg-white sm:bg-cyan-600")
                form(id="search-form" class="flex group border-gray-500 focus-within:border-cyan-600 border-2 rounded overflow-hidden sm:border-none sm:items-center sm:rounded-none sm:rounded-s ")
                    input(name="title" type="search" placeholder="Search here..." class="w-[85%] px-3 py-2 outline-none rounded-s text-lg h-full sm:w-[80%] sm:py-0.5 md:py-1 sm:border-2 sm:focus-within:border-black")

                    button(class="btn-search || h-full w-[15%] grid place-items-center cursor-pointer rounded-e group-focus-within:bg-black group-hover:bg-black sm:bg-black sm:w-[20%] ")
                        svg(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke-width='1.5' class="w-6 h-6 stroke-gray-600 group-focus-within:stroke-white group-hover:stroke-white")
                            path(stroke-linecap='round' stroke-linejoin='round' d='M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z')

                    div(class="navbar-btn || hidden border border-white place-items-center py-2 px-3 sm:w-fit sm:ml-4 sm:grid lg:hidden")
                        svg.w-6.h-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
                            path(stroke-linecap='round' stroke-linejoin='round' d='M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5')

            nav(class="hidden lg:flex items-center font-semibold text-lg gap-x-5 justify-center " id="navbar")
                a(class="hover:text-gray-700" href="/") Home
                a(class="hover:text-gray-700" href="/category-news") Daftar Berita

        
    
        menu(class="w-full bg-cyan-600 p-3 flex justify-between sticky top-0 sm:hidden" id="navbar-scroll-target")
            h2(class="text-3xl font-light") MENU
            div(class="navbar-btn" class="border border-white grid place-items-center py-2 px-3")
                svg.w-6.h-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
                    path(stroke-linecap='round' stroke-linejoin='round' d='M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5')

        nav(class="navbar || navbar-visibility rounded -translate-x-1/2 left-1/2 bottom-4 fixed w-[90vw] h-5/6 text-black p-3 flex flex-col gap-y-2 font-bold navbar-transition sm:w-[45vw] md:text-2xl bg-white shadow-md overflow-auto text-xl")
            span(class="rounded px-2") Navigasi
            ul(class="px-4 text-sm grid grid-cols-2 gap-3 md:text-base")
                li
                    a(href="/" class="hover:text-sky-600") Home
                
            span(class="rounded px-2") Kategori
            ul(id="" class="navbar-kategori || px-4 text-sm grid grid-cols-2 gap-3 md:text-base")
                //- li
                //-     a(href="/" class="hover:text-sky-600") Business
                //- li
                //-     a(href="/" class="hover:text-sky-600") Alam
                

        block main

        script(src="/js/layouts.js")

    