extends ./includes/layouts

block main 
    div(class="flex flex-col w-full p-4 gap-y-4 mx-auto lg:mt-8 lg:w-4/5")
        h1(class="font-bold text-lg text-center md:text-3xl") KATEGORI BUSINESS

        div(class="grid w-full grid-cols-1")    
            each val in news                
                div(class="flex gap-y-1 gap-x-3 items-center")
                    img(src=val.ilustrate, alt=val.title class="w-2/5")
                    span(class="font-semibold text-sm text-center p-1 w-3/5")= val.title