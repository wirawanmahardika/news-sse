extends ./includes/layouts

mixin kategori(header, image)
    h3(class="font-semibold text-xl") #{header}
    //- img(class="w-full min-h-[200px] border-4 border-gray-800" src=image)
    img(class="w-full min-h-[200px] border-4 border-gray-800" src="/img/news-350x223-3.jpg")


block main

    main(class="grid gap-y-3 w-full p-5" id="main")
        h2(class="font-bold text-3xl mt-7") Category
        each n in categoryNews
            +kategori(n.category)

        h2(class="font-bold text-3xl mt-7") Terkini
        each n in recentNews
            h3(class="font-semibold text-xl") #{n.title}
            a(href="/view/read-news?news="+n.id_news)
                img(class="w-full min-h-[200px] border-4 border-gray-800" src="/img/news-350x223-1.jpg")