extends ./includes/layouts

mixin text(judul, content)
    h3(class="text-lg font-bold break-words sm:text-xl") #{judul}
    each paragraph in content
        p(class="break-words sm:text-lg")= paragraph

block main
    main(class="w-full p-5 grid grid-cols-1 gap-y-3")
        div(class="w-full bg-black min-h-[200px]")
    
        article(class="text-justify flex flex-col gap-y-9")
            each content in contents
                +text(content.sub_title, content.content)


    script(src="/js/read-news.js") 