extends ./includes/layouts

block main 
    form(class="flex flex-col w-full items-center p-4")
        h3(class="font-bold text-xl my-5") TAMBAH BERITA BARU

        div(class="w-full p-3 gap-y-4")
            label(class="font-bold text-lg") Category
            input(type="text" name="category" class="w-full px-2 py-1 outline-none border-2 border-gray-700 focus-within:border-cyan-600" required)

        div(class="w-full p-3 gap-y-4")
            label(class="font-bold text-lg") Image
            input(type="file" name="image" class="w-full px-2 py-1 outline-none border-2 border-gray-700 focus-within:border-cyan-600")


        button(type='submit' class="px-4 py-1 bg-cyan-600 rounded font-semibold my-2") Submit

    script(src="/js/add-category-news.js")
        
